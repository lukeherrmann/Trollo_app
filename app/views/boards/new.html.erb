<h1>Add Board</h1>
<%= form_with(model: @board, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :board_name%>
    <%= f.text_field :board_name, required: true, placeholder: "Board Name" %>
  </div>
  <%= f.submit nil, class: "ui blue inverted button small"  %>
<% end %>