<h1><%= @list.id ? 'Edit List' : 'Create List' %></h1>
<hr />
<%= form_with(model: [@board, @list], local: true, class: "ui form") do |f| %>
  <%= f.label :list_name %>
  <%= f.text_field :list_name, required: true, autofocus: true %>
  <br />
  <br />
  <%= f.submit nil, class: "ui blue inverted button small"  %>
<% end %>